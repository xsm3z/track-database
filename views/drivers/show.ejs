<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>
<body>
  <%- include('../partials/_navbar') %>
  <h1><%= driver.firstName %> <%= driver.lastName %></h1>
  <p>Email: <%= driver.email %></p>
  <h2>Vehicles</h2>
  <ul>
    <% driver.vehicles.forEach(vehicle => { %>
      <li>
        <a href="/drivers/<%= driver._id %>/vehicles/<%= vehicle._id %>"><%= vehicle.make %> <%= vehicle.model %></a>
      </li>
    <% }) %>
  </ul> 
   <a href="/drivers/<%= driver._id %>/vehicles/new">Add a New Vehicle</a>
   <a href="/drivers/<%= driver._id %>/edit">Edit Driver</a>
  <form action="/drivers/<%= driver._id %>?_method=DELETE" method="POST">
    <button type="submit">Delete Driver</button>
  </form>
  <a href="/drivers">Back to Drivers</a>
</body>
</html>